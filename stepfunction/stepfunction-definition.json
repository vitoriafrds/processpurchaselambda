{
    "Comment" : "Transaction Processor State Machine",
    "StartAt" : "ProcessTransaction",
    "States" : {
        "ProcessTransaction" : {
            "Type" : "Choice",
            "Choices" : [
                {
                    "Variable" : "$.TransactionType",
                    "StringEquals" : "PURCHASE",
                    "Next" : "ProcessPurchase"
                },
                {
                    "Variable" : "$.TransactionType",
                    "StringEquals" : "REFUND",
                    "Next" : "ProcessRefund"
                }
            ]
        },
        "ProcessRefund" : {
            "Type" : "Task",
            "Resource" : "arn:aws:lambda:sa-east-1:000000000:function:ProcessRefund",
            "End" : true
        },
        "ProcessPurchase" : {
            "Type" : "Task",
            "Resource" : "arn:aws:lambda:sa-east-1:000000000:function:ProcessPurchase",
            "End" : true
        } 
    }
}